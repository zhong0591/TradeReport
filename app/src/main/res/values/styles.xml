<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F9F9F9</item>
        <item name="colorPrimaryDark">#F9F9F9</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarSize">48dp</item>
        <item name="toolbarStyle">@style/AppToolbarStyle</item>
    </style>

    <style name="AppToolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="maxButtonHeight">?attr/actionBarSize</item>
        <item name="contentInsetStart">16dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextAppearance">@style/AppToolbar.TitleText</item>
    </style>

    <style name="AppToolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>
</resources>
